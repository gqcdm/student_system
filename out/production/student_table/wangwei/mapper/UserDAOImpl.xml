<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="wangwei.dao.LoadDAO">
    <select id="selectAll" resultType="wangwei.entity.User">
        select * from user;
    </select>
    <select id="selectByNameAndPassword" resultType="user">
        select *
        from user
        where name = #{name}
          and pwd = #{pwd};
    </select>
    <select id="selectByName" resultType="user">
        select *
        from user
        where name = #{name};
    </select>
    <insert id="insertAll" parameterType="wangwei.entity.User">
        insert into user (name,pwd,createDate,role)
        values (#{name}, #{pwd},#{createDate},#{role});
    </insert>
</mapper>
